extends ./__layout.pug

block title
  title Download
  

block body
  body(class="download-body")
    header(class="akara-download-header")
      span Download
      span(class="fa fa-window-close download-close")
    section(class="download")
      p(class="akara-download-filename") ( ... )
      div(class="akara-total-byte")
        div(class="akara-download-meter")
        div(class="akara-unknown-download-meter")
      p(class="akara-downloading-percent")
      div(class="akara-bytes")
        span(class="akara-currentByte") --
        span(class="akara-totalByte") --
      p(class="akara-download-state") Connecting
      div(class="download-control-button")
        button(class="akara-download-cancel") Cancel
        button(class="akara-download-pause" disabled) Pause
        button(class="akara-download-resume" hidden) Resume
        button(class="akara-download-restart" hidden) Restart
    script(src='../js/Download.js')
